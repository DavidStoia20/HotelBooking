@page
@model HotelBooking.Pages.Reviews.CreateModel

@{
    ViewData["Title"] = "Adaugă Recenzie";
}

<h1>Adaugă Recenzie</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="RoomNumber">Numărul Camerei</label>
        <select id="RoomNumber" name="RoomNumber" class="form-control" asp-items="Model.RoomNumbers"></select>
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Review.Rating" class="control-label"></label>
        <input asp-for="Review.Rating" type="number" min="1" max="5" class="form-control" />
        <span asp-validation-for="Review.Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Review.Comment" class="control-label"></label>
        <textarea asp-for="Review.Comment" class="form-control"></textarea>
        <span asp-validation-for="Review.Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvează Recenzia</button>
</form>

<div>
    <a asp-page="Index">Înapoi la Listă</a>
</div>